    <% if (locals.data) { %>
    <div class="table-responsive-sm ">
    <table class="table table-sm  table-hover">
        <thead class="table-primary">
        <tr>
            <th scope="col">timestamp</th>
            <th scope="col">ปริมาณน้ำ</th>
            <th scope="col">Do</th>
            <th scope="col">Treated_Do</th>
            <th scope="col">Temp</th>
            <th scope="col">Treated_Temp</th>
            <th scope="col">pH</th>
            <th scope="col">Treated_pH</th>
            <th scope="col">BOD</th>
            <th scope="col">Treated_BOD</th>
            <th scope="col">วันที่</th>
            <th scope="col">เดือน</th>
            <th scope="col">ปี</th>
        </tr>
        </thead>
        <% 
        for (d of data) { 
            let dt = new Date(Date.parse(d.date_added))
            let df = `${dt.getDate()}-${dt.getMonth() + 1}-${dt.getFullYear()}`
        %>
        <tbody>
            <tr>
                <td><%= d.timestamp %></td>
                <td><%= d.treated_water %></td>
                <td><%= d.do %></td>
                <td><%= d.treated_doo %></td>
                <td><%= d.temp %></td>
                <td><%= d.treated_temp %></td>
                
                <td><%= d.ph %></td>
                <td><%= d.treated_ph %></td>
                <td><%= d.bod %></td>
                <td><%= d.treated_bod %></td>
                <td><%= d.day %></td>
                <td><%= d.month %></td>
                <td><%= d.year %></td>
            </tr>
        </tbody>
        <% } %>
    </table>
    <% } %>
