                <td><%= d.time %></td>
                <td><%= d.ph %></td>
                <td><%= d.salt %></td>
                <td><%= d.turb %></td>
                <td><%= d.tds %></td>
                <td><%= d.chlorophyll %></td>
                <td><%= d.do %></td>
                <td><%= d.temp %></td>
                <td><%= d.depth %></td>
